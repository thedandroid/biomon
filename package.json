{
  "name": "biomon",
  "version": "1.0.0",
  "description": "BIOMON - Alien RPG Crew Vitals & Stress Monitor",
  "type": "module",
  "main": "server.js",
  "bin": "server.cjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "selfcheck": "node scripts/selfcheck.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "build": "node build.js && pkg dist/server.bundled.cjs --targets node18-win-x64 --output dist/biomon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "pkg": {
    "assets": [
      "dist/public/**/*"
    ],
    "scripts": [
      "dist/server.bundled.cjs"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "alien-rpg",
    "stress",
    "panic",
    "crew-monitor",
    "weyland-yutani"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "express": "^5.2.1",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "pkg": "^5.8.1",
    "socket.io-client": "^4.8.3",
    "vitest": "^4.0.18"
  }
}
